.container{
  background-color: #011627;
  width: 750rpx;
  height: 100vh;
}
.love_words{
  position: relative;
  width: 500rpx;
  min-height:700rpx;
  border-top: 2rpx solid #ddd;
  border-left: 2rpx solid #ddd;
  box-shadow: 15rpx 15rpx 15rpx #000;
  border-radius: 15rpx;
  font-size: large;
  font-weight: 800;
  display: flex;
  justify-content: center;
  align-items: center;
  transform-style:preserve-3d;
  transform:perspective(1000px) rotate3d(-10deg,-10deg);
  color: #FF9F1C;
}
.postion{
  position: absolute;
  top: 0;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border:2px solid rgba(256, 256, 256, 0.8); 
}
@keyframes shake{
  0%{
    transform:rotate3d(-10deg,-10deg);
  }
}